

---
import BaseHead from './micro_components/BaseHead.astro'
interface Props {
	title?: string
	lang? : string
	description? : string
	heroImage? : string
}

const { title, lang, description, heroImage } = Astro.props;

const pageTitle = title ? title : "Digital Poetry"

const language = lang ? lang : "en"

const Pagedescription = description ? description : `Unrationnal is an agency that explores the horizon of the latest technological innovations and harnesses them to help you enjoy them in the simplest way possible.`
---

<!doctype html>
<html lang={language}>
	<head>
		<BaseHead title={pageTitle} description={Pagedescription} image={heroImage}/>
	</head>
	<body>
		<slot />
	</body>
</html>


